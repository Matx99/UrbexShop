{{ form_start(form) }}

    <div class="row justify-content-center">
        {{ form_widget(form.name, {
            'attr': {'placeholder': "Nom", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.description, {
            'attr': {'placeholder': "Description", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.media, {
            'attr': {'placeholder': "URL de l'image", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.mediaAlt, {
            'attr': {'placeholder': "Alt de l'image", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.price, {
            'attr': {'placeholder': "Prix", 'class' : 'form-control col-6 mt-3','type':'number'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.category, {
            'attr': {'placeholder': "Cat√©gorie", 'class' : 'form-control col-6 mt-3 mb-2'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.available, {
            'attr': {'placeholder': "Disponible", 'class' : 'mt-2'}
        }) }}
        {{ form_label(form.available, "Disponible", { 'label_attr': {'class': 'mt-1 ml-2'}}) }} 
    </div>


    <div class="row justify-content-center">
        <button class="btn btn-success mt-1">{{ button_label|default('Enregistrer') }}</button>
    </div>

{{ form_end(form) }}
