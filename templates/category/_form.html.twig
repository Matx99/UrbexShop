{{ form_start(form) }}

    <div class="row justify-content-center">
        {{ form_widget(form.name, {
            'attr': {'placeholder': "Nom", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.description, {
            'attr': {'placeholder': "Description", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.media, {
            'attr': {'placeholder': "URL de l'image", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        {{ form_widget(form.mediaAlt, {
            'attr': {'placeholder': "Alt de l'image", 'class' : 'form-control col-6 mt-3'}
        }) }}
    </div>
    <div class="row justify-content-center">
        <button class="btn btn-primary mt-4">{{ button_label|default('Enregistrer') }}</button>
    </div>
    
{{ form_end(form) }}
