{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Les produits de la catégories {{ category.name }}</h1>
    </div>

    <div class="row">
        {% for product in category.products %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ product.name }}
                        -
                        {{ product.price }}
                        €
                    </h2>
                        <img class="img-fluid rounded" src="{{ product.media }}" alt="{{ product.MediaAlt }}">

                    <hr>
                    <a href="{{path( 'cart_add', {'id': product.id} )}}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
